<div class="jumbotron" style="background-color: #fff352; margin-bottom: 40px;">
  <div class="container">
    <h3 class="text-white" style="display: flex; align-items: center; height: 120px;">ログイン</h3>
  </div>
</div>

<section class="section">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-5">
        <%= form_with model: @admin, url: session_path(resource_name), local: true do |f| %>
          <div class="form-group">
            <%= f.label :メールアドレス, class: "label" %>
          <div class="input-group">
            <%= f.text_field :email, autofocus: true, autocomplete: "email", placeholder: "email", class: "form-control", style: "padding-left: 50px;", "aria-label": "email" %>
          <div class="input-group-append">
          <span class="input-group-text"><i class="fas fa-envelope"></i></span>
          </div>
          </div>
          </div>
          <div class="form-group">
            <%= f.label :パスワード, class: "label" %>
          <div class="input-group">
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "password", class: "form-control", style: "padding-left: 50px;" %>
          <div class="input-group-append">
          <span class="input-group-text"><i class="fas fa-lock"></i></span>
          </div>
          </div>
          </div>
          <div class="actions">
            <%= f.submit "Log in", class: "btn btn-light" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
