<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        マイページ
      </h1>
    </div>
  </div>
</section>


<section class="section">
  <div class="container">
    <div class="columns is-flex-direction-column is-centered">
      <div class="column is-8">
        <div class="is-centered">
          <div class="column is-4">
            <figure class="image is-128x128" style="margin-left: auto; margin-right: auto;">
              <%= image_tag url_for(@user.profile_image.variant(format: 'png')), fallback: "images.png", class: "is-rounded" %>
            </figure>
          </div>
          <div class="column is-8">
            <table class="table is-fullwidth custom-margin-top">
              <tr>
                <td class="is-size-4">
                  <strong><%= @user.name %></strong>
                  <strong><%= @user.age %></strong>
                  <strong><%= @user.sex %></strong>
                </td>
              </tr>
            </table>
            <% if @user.id == current_user.id %>
            <table class="table is-fullwidth">
              <tr>
                <td class="is-size-4">
                  <%= @user.email %>
                </td>
                <td>
                    <%= link_to "編集", edit_user_path(@user), class: "button is-primary" %>
                </td>
              </tr>
            </table>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

